<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="page.bingx.study2bean.dao.OrderItemDao">

    <resultMap id="OrderItemMap" type="page.bingx.study2bean.pojo.OrderItem">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="product_id" property="productId"/>
        <result column="quantity" property="quantity"/>
    </resultMap>

    <select id="findOrderItemById" resultMap="OrderItemMap" parameterType="int">
        SELECT * FROM order_item WHERE order_id = #{id}
    </select>

</mapper>